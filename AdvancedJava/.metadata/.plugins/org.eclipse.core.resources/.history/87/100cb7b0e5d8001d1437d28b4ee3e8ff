package com.product.service;

import java.util.List;
import java.util.Optional;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.product.model.Product;
import com.product.repository.ProductRepository;

@Service
public class ProductService {
   @Autowired
   ProductRepository propRepo;
   
  public List<Product> getProducts() {
	  
	  return propRepo.findAll();
  }
  public void addProduct(Product prop) {
	  propRepo.save(prop);
  }
  public void updateProduct(Product product,Integer id) {
	  Optional<Product> p= propRepo.findById(id);
	  propRepo.findByName(p.get().getProductName());
	  propRepo.save(product);
	  
  }
}
